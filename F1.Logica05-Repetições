import prompt from 'prompt-sync';
let pergunte = prompt()

console.log('PROGRAMA DA TABUADA')
console.log('Informe um numero')
let numero = Number(pergunte())
let cont = 0
while (cont <=10) {
  let valor = cont * numero;
  console.log(numero+ 'x' + cont +'=' +valor);
cont ++;
}

